<Page
    x:Class="CharityApp.SettleBoxPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CharityApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:StatusToVisibilityConverter x:Key="StatusToVisibilityConverter"/>
        <local:StatusToStringConverter x:Key="StatusToStringConverter"/>
    </Page.Resources>

    <Grid Background="LightGray">
        <Button Content="Powrót"
                Click="OnBackClick"
                Background="Transparent"
                Foreground="DarkSlateGray"
                FontSize="16"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"/>

        <StackPanel Margin="20" Spacing="10">
            <TextBlock Text="Rozlicz Puszki"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="DarkSlateGray"
                       HorizontalAlignment="Center"/>
            <ListView x:Name="VolunteersListView" SelectionMode="None" Height="400">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock FontSize="18">
                                <Run Text="• Wolontariusz: "/>
                                <Run Text="{Binding Username}" Foreground="DarkSlateGray" FontWeight="Bold"/>
                                <Run Text=" | Puszka: "/>
                                <Run Text="{Binding Status, Converter={StaticResource StatusToStringConverter}}" Foreground="DarkSlateGray" FontWeight="Bold"/>
                            </TextBlock>
                            <TextBlock FontSize="18" Visibility="{Binding Status, Converter={StaticResource StatusToVisibilityConverter}}">
                                <Run Text=" | Zebrana kwota: "/>
                                <Run Text="{Binding Amount}" Foreground="DarkSlateGray" FontWeight="Bold"/>
                            </TextBlock>

                            <TextBox x:Name="AmountTextBox" Width="80" Visibility="{Binding CanSettle, Converter={StaticResource BoolToVisibilityConverter}}" />

                            <Button Content="Rozlicz"
                        Click="OnSettleClick"
                        IsEnabled="{Binding CanSettle}"
                        Visibility="{Binding CanSettle, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


            <TextBlock x:Name="MessageTextBlock"
                       FontSize="16"
                       Foreground="Red"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
