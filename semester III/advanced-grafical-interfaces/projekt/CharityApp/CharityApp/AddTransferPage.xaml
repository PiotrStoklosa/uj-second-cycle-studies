<Page
    x:Class="CharityApp.AddTransferPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CharityApp">

    <Grid Background="White">
        <Button Content="← Powrót"
                Click="OnBackButtonClick"
                Background="Transparent"
                Foreground="DarkSlateGray"
                FontSize="16"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15" Width="400">
            <TextBlock Text="Dodaj przelew"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="DarkSlateGray"
                       TextAlignment="Center"/>

            <TextBox x:Name="SenderTextBox" PlaceholderText="Od kogo" Width="400"/>
            <TextBox x:Name="AmountTextBox" PlaceholderText="Kwota" InputScope="Number" TextChanged="AmountTextBoxTextChanged" Width="400"/>

            <ComboBox x:Name="CurrencyComboBox" Header="Wybierz walutę" Width="400"
                ItemsSource="{x:Bind CurrencyCodes}"
                SelectedItem="{x:Bind SelectedCurrencyCode, Mode=TwoWay}" />

            <Button Content="Dodaj przelew"
                    Click="OnAddTransferClick"
                    Background="DarkSlateGray"
                    Foreground="White"
                    Width="400"
                    Height="50"/>

            <TextBlock x:Name="MessageTextBlock" 
           Text="" 
           Foreground="Red" 
           FontSize="18" 
           TextAlignment="Center" 
           TextWrapping="Wrap"
           Margin="-50 0 0 0"
           Width="500"/>

        </StackPanel>
    </Grid>
</Page>