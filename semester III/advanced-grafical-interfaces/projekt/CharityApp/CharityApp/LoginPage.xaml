<Page
    x:Class="CharityApp.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CharityApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="LightGray">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15">
            <TextBlock Text="Logowanie"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="DarkSlateGray"
                       HorizontalAlignment="Center"/>

            <TextBox x:Name="UsernameTextBox"
                     PlaceholderText="Nazwa użytkownika"
                     Width="300"
                     Margin="0,10,0,0"/>

            <PasswordBox x:Name="PasswordBox"
                         PlaceholderText="Hasło"
                         Width="300"
                         Margin="0,10,0,0"/>

            <Button Content="Zaloguj"
                    Click="OnLoginButtonClick"
                    Background="DarkSlateGray"
                    Foreground="White"
                    Width="300"
                    Height="40"
                    FontSize="18"
                    Margin="0,20,0,0"/>

            <TextBlock x:Name="MessageTextBlock"
                       Text=""
                       FontSize="18"
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>