<Page
    x:Class="CharityApp.ListAdminsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CharityApp">

    <Grid Background="White">
        <!-- Przycisk powrotu -->
        <Button Content="← Powrót"
                Click="OnBackButtonClick"
                Background="Transparent"
                Foreground="DarkSlateGray"
                FontSize="16"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10"/>

        <!-- Tytuł i lista adminów -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Spacing="15">
            <TextBlock Text="Lista Administratorów"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="DarkSlateGray"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <ListView x:Name="AdminsListView" Width="600" Height="400">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="20">
                            <TextBlock Foreground="DarkSlateGray" Text="Imię: " FontWeight="Bold"/>
                            <TextBlock Foreground="DarkSlateGray" Text="{Binding FirstName}"/>
                            <TextBlock Foreground="DarkSlateGray" Text="Nazwisko: " FontWeight="Bold"/>
                            <TextBlock Foreground="DarkSlateGray" Text="{Binding LastName}"/>
                            <TextBlock Foreground="DarkSlateGray" Text="PESEL: " FontWeight="Bold"/>
                            <TextBlock Foreground="DarkSlateGray" Text="{Binding Pesel}"/>
                            <TextBlock Foreground="DarkSlateGray" Text="Region: " FontWeight="Bold"/>
                            <TextBlock Foreground="DarkSlateGray" Text="{Binding Region}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
