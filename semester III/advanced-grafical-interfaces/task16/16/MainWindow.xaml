<Window x:Class="SpeechSynthesizerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Syntezator Mowy" Height="250" Width="400">
    <Grid Margin="10">
        <TextBox Name="txtInput" Height="100" Width="360" TextWrapping="Wrap" 
                 VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>

        <Button Name="BtnReadText" Content="Czytaj" Width="100" Height="30" 
                VerticalAlignment="Bottom" HorizontalAlignment="Left" 
                Click="BtnReadText_Click" Margin="10"/>

        <Button Name="BtnLoadFile" Content="Wczytaj plik" Width="100" Height="30" 
                VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                Click="BtnLoadFile_Click" Margin="10"/>
    </Grid>
</Window>
